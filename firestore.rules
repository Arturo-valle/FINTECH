rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function hasValidAppCheck() {
      return request.app != null;
    }

    function hasRole(roles) {
      return isSignedIn() && request.auth.token.role in roles;
    }

    match /organizations/{orgId} {
      allow read: if hasValidAppCheck();
      allow write: if hasValidAppCheck() && hasRole(['association_admin', 'super_admin']);
    }

    match /events/{eventId} {
      allow read: if hasValidAppCheck();
      allow create, update, delete: if hasValidAppCheck() && hasRole(['association_admin', 'org_admin', 'super_admin']);
    }

    match /resources/{resourceId} {
      allow read: if hasValidAppCheck();
      allow write: if hasValidAppCheck() && hasRole(['association_admin', 'super_admin']);
    }

    match /{document=**} {
      allow read: if hasValidAppCheck() && isSignedIn();
    }
  }
}
